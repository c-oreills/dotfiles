[color]
	ui = true
	branch = auto
	diff = auto
	log = auto
	interactive = auto
	status = auto
	pager = true
[user]
	name = Christy O'Reilly
	email = christy@oreills.co.uk
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
        pager = delta
[push]
        default = tracking
[merge]
        defaultToUpstream = true
[absorb]
        maxStack=100
        autoStageIfNothingStaged = true
[interactive]
        diffFilter = delta --color-only
[delta]
        navigate = true  # use n and N to move between diff sections
[merge]
        conflictstyle = zdiff3
